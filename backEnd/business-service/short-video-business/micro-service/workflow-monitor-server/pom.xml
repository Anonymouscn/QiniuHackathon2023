<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>workflow-monitor-server</artifactId>
    <version>1.0.0</version>
    <name>workflow-monitor-server</name>
    <packaging>jar</packaging>

    <parent>
        <groupId>cn.net.anonymous</groupId>
        <artifactId>micro-service</artifactId>
        <version>1.0.0</version>
    </parent>

    <dependencies>
        <!-- webmvc starter * -->
        <dependency>
            <groupId>cn.net.anonymous</groupId>
            <artifactId>webmvc-starter</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!-- dubbo provider * -->
        <dependency>
            <groupId>cn.net.anonymous</groupId>
            <artifactId>dubbo-provider-starter</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!-- api * -->
        <dependency>
            <groupId>cn.net.anonymous</groupId>
            <artifactId>api</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!-- pojo * -->
        <dependency>
            <groupId>cn.net.anonymous</groupId>
            <artifactId>pojo</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!-- system * -->
        <dependency>
            <groupId>cn.net.anonymous</groupId>
            <artifactId>system</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!-- config * -->
        <dependency>
            <groupId>cn.net.anonymous</groupId>
            <artifactId>config</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!-- util * -->
        <dependency>
            <groupId>cn.net.anonymous</groupId>
            <artifactId>util</artifactId>
            <version>1.0.0</version>
        </dependency>
        <!-- qi niu oss * -->
        <dependency>
            <groupId>com.qiniu</groupId>
            <artifactId>qiniu-java-sdk</artifactId>
            <version>${qiniu.oss.version}</version>
        </dependency>
        <!-- ffmepg dependence * -->
        <dependency>
            <groupId>ws.schild</groupId>
            <artifactId>jave-all-deps</artifactId>
            <version>${ffmpeg-dependance.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- maven plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <!-- springboot plugin -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring-boot.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>